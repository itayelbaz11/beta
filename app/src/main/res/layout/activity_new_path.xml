<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".NewPath"
    android:background="#3B4287">


    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:fontFamily="@font/faster_one"
            android:gravity="center"
            android:text="New Path! "
            android:textColor="#E3E5FA"
            android:textSize="36sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />

        <EditText
            android:id="@+id/etPN"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Path's Name- Where Are you?"
            android:background="#E3E5FA"
            />


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/faster_one"
                android:text="Map Size:"
                android:textColor="#E3E5FA"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/sCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sClick"
                android:text="small-200x200(m)"
                android:textColor="#E3E5FA" />

            <CheckBox
                android:id="@+id/mCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="mClick"
                android:text="medium-500x500(m)"
                android:textColor="#E3E5FA" />

            <CheckBox
                android:id="@+id/lCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="lClick"
                android:text="large-1000x1000(m)"
                android:textColor="#E3E5FA" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <CheckBox
            android:id="@+id/publicCB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:text="public map"
            android:textColor="#E3E5FA"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="#9AA0DC"
            android:fontFamily="@font/faster_one"
            android:text="enter"
            android:onClick="newPathName"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />
    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15" />

</LinearLayout>